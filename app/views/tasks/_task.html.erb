<div class='task'>
  <%= link_to task.title, task %>
  <%= form_tag toggle_complete_task_path(task_id: task), method: :put do %>
    <% if task.completed? %>
      <%= hidden_field_tag :completed?, false %>
      <%= submit_tag 'Mark Incomplete' %>
    <% else %>
      <%= hidden_field_tag :completed?, true %>
      <%= submit_tag 'Mark Complete' %>
    <% end %>
  <% end %>
</div>
