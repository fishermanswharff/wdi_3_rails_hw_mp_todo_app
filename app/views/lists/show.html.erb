<h1><%= @list.title %></h1>
<%= form_for @list do |f| %>
  <%= f.label :complete, "status:"  %>
  <%= f.check_box :complete %>
  <%= f.submit  %>
<% end %>
<ul>
  <% @list.tasks.each do |task| %>
  <li>
    <%= task.label %>
    <%= form_for task do |f| %>
      <%= f.label :complete, "status:"  %>
      <%= f.check_box :complete %>
      <%= f.submit  %>
    <% end %>
  </li>
  <% end %>
</ul>

<div>
  <h2>Create a new task for the <%= @list.title %> list:</h2>
  <%= form_for [@list, @list.tasks.new] do |f| %>
    <div class="form-group">
      <%= f.label :label %>
      <%= f.text_field :label %>
    </div>
  <% end %>
</div>